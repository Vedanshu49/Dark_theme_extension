{
  "manifest_version": 3,
  "name": "Smart Dark Theme",
  "version": "1.0.0",
  "description": "Intelligent dark theme extension with smart DOM analysis and media preservation",
  "icons": {
    "16": "public/icon-16.png",
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Smart Dark Theme"
  },
  "background": {
    "service_worker": "src/service-worker/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/dom-analyzer.js", "src/content/content.js"],
      "run_at": "document_start"
    }
  ]
}
